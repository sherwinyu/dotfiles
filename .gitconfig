[user]
	name = Sherwin Yu
	email = sherwin.x.yu@gmail.com
[core]
	editor = vim
      excludesfile = /opt/boxen/config/git/gitignore
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[credential]
helper = /opt/boxen/bin/boxen-git-credential

[hub]
protocol = https

[alias]
  turnt = checkout
