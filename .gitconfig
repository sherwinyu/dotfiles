[user]
	name = Sherwin Yu
	email = sherwin.x.yu@gmail.com
[core]
	editor = nvim
	pager = less -F -X
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow
  frag = magenta bold
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[credential]

[hub]
protocol = https

[alias]
  turnt = checkout
  reese = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short)  %(refname:short)'
[log]
	decorate = short
